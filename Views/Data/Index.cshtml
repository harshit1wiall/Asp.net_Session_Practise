<head>
    <link rel="stylesheet" type="text/css" href="/css/Data.css" />
</head>







<body>

    <h2>Enter Details</h2>

    <form asp-controller="Data" asp-action="Index" method="post">
        <div class="form-group">
            <label for="Username">Username:</label>
            <input name="Username" class="form-control"  placeholder="Enter your Name" required />
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <input name="Description" class="form-control"   placeholder="Tell me about yourself...."  required/>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</body>




